<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bg_rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_night" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/backgroudn_fragment_night">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator_rain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:ci_drawable="@drawable/custom_indicator"
                app:ci_height="@dimen/_8sdp"
                app:ci_margin="@dimen/_6sdp"
                app:ci_width="@dimen/_8sdp">

            </me.relex.circleindicator.CircleIndicator>

            <TextView
                android:id="@+id/txt_sound_night"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center"
                android:text="Night Sound"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_32sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_volume" />

                <SeekBar
                    android:id="@+id/seekbar_ocean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_night_storm"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_storm" />

                <ImageView
                    android:id="@+id/ic_night_landscape"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_landspace" />

                <ImageView
                    android:id="@+id/ic_night_ladybird"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_summer_ladybird" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_night_moon"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_moon" />

                <ImageView
                    android:id="@+id/ic_night_sleep"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_sleep" />

                <ImageView
                    android:id="@+id/ic_night_home_bird"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_brid_home" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_night_wolf"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_wolf" />

                <ImageView
                    android:id="@+id/ic_night_bat"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_bat" />

                <ImageView
                    android:id="@+id/ic_night_lamp"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_night_lamp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>