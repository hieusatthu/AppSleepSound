<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bg_rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_contry_side" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/backgroudn_fragment_summer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <me.relex.circleindicator.CircleIndicator
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                app:ci_drawable="@drawable/custom_indicator"
                app:ci_margin="@dimen/_6sdp"
                app:ci_width="@dimen/_8sdp"
                app:ci_height="@dimen/_8sdp"
                android:id="@+id/indicator_rain"
                android:layout_height="@dimen/_24sdp">
            </me.relex.circleindicator.CircleIndicator>
            <TextView
                android:id="@+id/txt_sound_summer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center"
                android:text="Summer Sound"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_32sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp">
                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_volume"
                    />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar_summer"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/unclick_item_fragment"
                    android:layout_width="@dimen/_56sdp"
                    android:id="@+id/ic_summer_bird"
                    android:layout_height="@dimen/_56sdp"
                    android:src="@drawable/ic_summer_bird" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_forest"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"

                    android:src="@drawable/ic_summer_forest" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_leaf"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_summer_leaf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_ladybird"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"

                    android:src="@drawable/ic_summer_ladybird" />

                <ImageView
                    android:id="@+id/ic_summer_tree"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_summer_tree" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_sun"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_summer_sun" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_morning"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:src="@drawable/ic_summer_morning" />

                <ImageView
                    android:id="@+id/ic_summer_caffe"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_summer_caffe" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_summer_dry"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_summer_dry" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>