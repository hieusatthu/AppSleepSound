<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bg_rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_music" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/backgroudn_fragment_music">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator_rain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:ci_drawable="@drawable/custom_indicator"
                app:ci_height="@dimen/_8sdp"
                app:ci_margin="@dimen/_6sdp"
                app:ci_width="@dimen/_8sdp">

            </me.relex.circleindicator.CircleIndicator>

            <TextView
                android:id="@+id/txt_sound_music"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center"
                android:text="Music"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_32sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp">
                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_volume"
                    />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar_ocean"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_piano"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:src="@drawable/ic_music_piano" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_guitar"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_music_guitar" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_notes"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_music_notes" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_music_water"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_ocean_water" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_dolphin"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_ocean_dolphin" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_radio"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_music_radio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_coral"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:src="@drawable/ic_ocean_coral" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_wheel"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_ocean_wheel" />

                <ImageView
                    android:background="@drawable/unclick_item_fragment"

                    android:id="@+id/ic_music_boat_two"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:src="@drawable/ic_ocean_boat_two" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>