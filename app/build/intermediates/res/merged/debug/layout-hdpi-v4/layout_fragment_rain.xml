<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_bg_rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_rain_two" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/backgroudn_fragment_rain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator_rain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:ci_drawable="@drawable/custom_indicator"
                app:ci_height="@dimen/_8sdp"
                app:ci_margin="@dimen/_6sdp"
                app:ci_width="@dimen/_8sdp"></me.relex.circleindicator.CircleIndicator>

            <TextView
                android:id="@+id/txt_sound_rain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center"
                android:text="Rain Sound"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightTextView"
                android:layout_marginLeft="@dimen/_32sdp"
                android:layout_marginRight="@dimen/_32sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/ic_volume" />

                <SeekBar
                    android:id="@+id/seekbar_rain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_rain"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rain" />

                <ImageView
                    android:id="@+id/ic_rain_storm"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_stroms" />

                <ImageView
                    android:id="@+id/ic_rain_thunder"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_thunder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_rain_night"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_rain_night" />

                <ImageView
                    android:id="@+id/ic_rain_forest"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_rain_forest" />

                <ImageView
                    android:id="@+id/ic_rain_window"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_rain_window" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_rain_umbrella"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_umbrella" />

                <ImageView
                    android:id="@+id/ic_rain_summer"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_rain_summer" />

                <ImageView
                    android:id="@+id/ic_rain_small"

                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:background="@drawable/unclick_item_fragment"
                    android:src="@drawable/ic_rain_small" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>